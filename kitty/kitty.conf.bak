# 🖋️ Fuente
font_family      Monofur Nerd Font
bold_font        auto
italic_font      auto
font_size        14.5

# 🎯 Transparencia (0.0 totalmente transparente, 1.0 opaco)
background_opacity 0.90

# 🖱️ Scroll infinito (para no perder historial)
scrollback_lines 100000

# 🧭 Tabs pro
enabled_layouts tall,stack,grid
tab_bar_edge bottom
tab_bar_style powerline
# active_tab_foreground #011627
# active_tab_background #82aaff
# inactive_tab_foreground #d6deeb
# inactive_tab_background #1d3b53

# 🧠 Comportamiento
confirm_os_window_close 0
detect_urls yes
url_style underline
open_url_with default
editor nvim

# 🔄 Actualización más rápida del render
repaint_delay 10

# 🎮 Keybindings útiles (opcional)
map ctrl+shift+t new_tab
map ctrl+shift+w close_tab
map ctrl+shift+right next_tab
map ctrl+shift+left previous_tab
map f11 toggle_fullscreen

# Eliminar borde superior y título
hide_window_decorations yes
shell zsh


# BEGIN_KITTY_THEME
# Tokyo Night
include current-theme.conf
# END_KITTY_THEME
