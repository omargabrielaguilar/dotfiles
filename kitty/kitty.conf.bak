# ğŸ–‹ï¸ Fuente
font_family      Monofur Nerd Font
bold_font        auto
italic_font      auto
font_size        14.5

# ğŸ¯ Transparencia (0.0 totalmente transparente, 1.0 opaco)
background_opacity 0.90

# ğŸ–±ï¸ Scroll infinito (para no perder historial)
scrollback_lines 100000

# ğŸ§­ Tabs pro
enabled_layouts tall,stack,grid
tab_bar_edge bottom
tab_bar_style powerline
