{
    "theme": {
        "mode": "dark",
        "light": "Ayu Light",
        "dark": "macOS Classic Dark",
    },
    "icon_theme": "JetBrains New UI Icons (Dark)",
    "ui_font_family": "Monofur Nerd Font",
    "ui_font_size": 16.0,
    "ui_font_weight": 350.0,
    "buffer_font_family": "Agave Nerd Font",
    "buffer_font_size": 14.0,
    "buffer_font_weight": 500.0,
    "buffer_line_height": "standard",

    "theme_overrides": {
        "macOS Classic Dark": {
            "border.variant": "#15141C",
            "border": "#15141C",
            "players": [{ "cursor": "#8892bf" }],
            "syntax": {
                "comment": { "font_style": "italic" },
                "comment.doc": { "font_style": "italic" },
            },
        },
    },
    "title_bar": {
        "show_onboarding_banner": false,
        "show_project_items": false,
        "show_branch_name": false,
        "show_user_menu": false,
    },
    "tab_bar": {
        "show": true,
    },
    "toolbar": {
        "breadcrumbs": false,
        "quick_actions": false,
    },
    "status_bar": {
        "experimental.show": true,
    },

    "project_panel": {
        "dock": "right",
        "default_width": 400,
        "hide_root": true,
        "auto_fold_dirs": false,
        "starts_open": false,
        "git_status": true,
        "sticky_scroll": false,
        "scrollbar": { "show": "never" },
        "indent_guides": { "show": "never" },
    },
    "outline_panel": {
        "default_width": 300,
        "indent_guides": { "show": "never" },
    },
    "collaboration_panel": {
        "dock": "left",
    },

    "cursor_shape": "block",
    "cursor_blink": true,
    "multi_cursor_modifier": "cmd_or_ctrl",
    "relative_line_numbers": "enabled",
    "current_line_highlight": "none",
    "selection_highlight": true,
    "drag_and_drop_selection": { "enabled": false },
    "auto_indent": true,
    "auto_indent_on_paste": true,
    "soft_wrap": "editor_width",
    "tab_size": 4,
    "hard_tabs": false,
    "show_whitespaces": "selection",
    "inline_code_actions": true,
    "hover_popover_enabled": true,
    "seed_search_query_from_cursor": "always",
    "show_completions_on_input": true,
    "show_completion_documentation": true,
    "autosave": {
        "after_delay": { "milliseconds": 1000 },
    },

    "gutter": {
        "min_line_number_digits": 0,
        "folds": false,
        "runnables": false,
    },
    "scrollbar": {
        "show": "always",
        "git_diff": true,
    },
    "indent_guides": {
        "enabled": true,
    },

    "terminal": {
        "shell": { "program": "/bin/zsh" },
        "font_family": "Agave Nerd Font",
        "font_size": 14,
        "working_directory": "current_project_directory",
    },

    "git": {
        "git_gutter": "tracked_files",
        "inline_blame": {
            "enabled": true,
            "delay_ms": 600,
        },
    },

    "languages": {
        "PHP": {
            "tab_size": 4,
            "format_on_save": "on",
            "formatter": {
                "external": {
                    "command": "bash",
                    "arguments": [
                        "-c",
                        "cat > {buffer_path} && ./vendor/bin/pint --quiet {buffer_path} && cat {buffer_path}",
                    ],
                },
            },
            "language_servers": ["intelephense"],
        },
        "Blade": {
            "tab_size": 4,
            "hard_tabs": false,
        },
        "JavaScript": { "tab_size": 2, "format_on_save": "on" },
        "TypeScript": { "tab_size": 2, "format_on_save": "on" },
        "CSS": { "tab_size": 2, "format_on_save": "on" },
        "JSON": { "tab_size": 2, "format_on_save": "on" },
    },

    "lsp": {
        "intelephense": {
            "initialization_options": {
                "licenceKey": "00D0IEADQVBNA0K",
            },
            "settings": {
                "intelephense.files.associations": ["*.php", "*.blade.php"],
                "intelephense.environment.phpVersion": "8.5.0",
                "intelephense.stubs": [
                    "apache",
                    "bcmath",
                    "bz2",
                    "calendar",
                    "com_dotnet",
                    "Core",
                    "ctype",
                    "curl",
                    "date",
                    "dba",
                    "dom",
                    "enchant",
                    "exif",
                    "FFI",
                    "fileinfo",
                    "filter",
                    "fpm",
                    "ftp",
                    "gd",
                    "gettext",
                    "gmp",
                    "hash",
                    "iconv",
                    "imap",
                    "intl",
                    "json",
                    "ldap",
                    "libxml",
                    "mbstring",
                    "meta",
                    "mysqli",
                    "oci8",
                    "odbc",
                    "openssl",
                    "pcntl",
                    "pcre",
                    "PDO",
                    "pdo_ibm",
                    "pdo_mysql",
                    "pdo_pgsql",
                    "pdo_sqlite",
                    "pgsql",
                    "Phar",
                    "posix",
                    "pspell",
                    "readline",
                    "Reflection",
                    "session",
                    "shmop",
                    "SimpleXML",
                    "snmp",
                    "soap",
                    "sockets",
                    "sodium",
                    "SPL",
                    "sqlite3",
                    "standard",
                    "superglobals",
                    "sysvmsg",
                    "sysvsem",
                    "sysvshm",
                    "tidy",
                    "tokenizer",
                    "xml",
                    "xmlreader",
                    "xmlrpc",
                    "xmlwriter",
                    "xsl",
                    "Zend OPcache",
                    "zip",
                    "zlib",
                ],
            },
        },
    },

    "file_types": {
        "Blade": ["blade.php"],
        "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    },

    "auto_install_extensions": {
        "php": true,
        "blade": true,
        "env": true,
        "tailwindcss": true,
    },

    "centered_layout": {
        "right_padding": 0.15,
        "left_padding": 0.15,
    },

    "session": {
        "restore_unsaved_buffers": false,
    },
    "restore_on_startup": "empty_tab",
    "when_closing_with_no_tabs": "keep_window_open",
    "close_on_file_delete": true,
    "remove_trailing_whitespace_on_save": true,
    "ensure_final_newline_on_save": true,
    "format_on_save": "on",
    "vim_mode": false,
    "auto_update": true,
    "telemetry": {
        "diagnostics": true,
        "metrics": true,
    },
}
