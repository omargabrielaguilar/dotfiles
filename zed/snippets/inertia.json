  "Inertia React Page": {
    "prefix": "inertia-react-page",
    "body": [
      "import { Head } from '@inertiajs/react'",
      "",
      "export default function ${1:PageName}({ ${2:prop} }) {",
      "    return (",
      "        <>",
      "            <Head title=\"${3:Page Title}\" />",
      "",
      "            <div>",
      "                ${4:{/* content */}}",
      "            </div>",
      "        </>",
      "    )",
      "}"
    ],
    "description": "Inertia React page"
  },
  "Inertia React Form": {
    "prefix": "inertia-react-form",
    "body": [
      "import { useForm } from '@inertiajs/react'",
      "",
      "export default function ${1:FormComponent}() {",
      "    const { data, setData, post, processing, errors } = useForm({",
      "        ${2:field}: '',",
      "    })",
      "",
      "    function submit(e) {",
      "        e.preventDefault()",
      "        post(route('${3:route.store}'))",
      "    }",
      "",
      "    return (",
      "        <form onSubmit={submit}>",
      "            <input",
      "                value={data.${2:field}}",
      "                onChange={e => setData('${2:field}', e.target.value)}",
      "            />",
      "            {errors.${2:field} && <div>{errors.${2:field}}</div>}",
      "",
      "            <button type=\"submit\" disabled={processing}>",
      "                Submit",
      "            </button>",
      "        </form>",
      "    )",
      "}"
    ],
    "description": "Inertia React form"
  },
