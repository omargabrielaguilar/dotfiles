  "Inertia Controller": {
    "prefix": "inertia-controller",
    "body": [
      "<?php",
      "",
      "namespace App\\Http\\Controllers;",
      "",
      "use Illuminate\\Http\\Request;",
      "use Inertia\\Inertia;",
      "use Inertia\\Response;",
      "",
      "class ${1:ControllerName} extends Controller",
      "{",
      "    public function index(): Response",
      "    {",
      "        return Inertia::render('${2:Page/Index}', [",
      "            ${3://}",
      "        ]);",
      "    }",
      "",
      "    public function create(): Response",
      "    {",
      "        return Inertia::render('${2:Page}/Create');",
      "    }",
      "",
      "    public function store(Request \\$request)",
      "    {",
      "        ${4:// store logic}",
      "",
      "        return redirect()->route('${5:route.index}');",
      "    }",
      "",
      "    public function edit(${6:\\$model}): Response",
      "    {",
      "        return Inertia::render('${2:Page}/Edit', [",
      "            '${7:model}' => ${6:\\$model},",
      "        ]);",
      "    }",
      "",
      "    public function update(Request \\$request, ${6:\\$model})",
      "    {",
      "        ${8:// update logic}",
      "",
      "        return redirect()->route('${5:route.index}');",
      "    }",
      "",
      "    public function destroy(${6:\\$model})",
      "    {",
      "        ${6:\\$model}->delete();",
      "",
      "        return redirect()->route('${5:route.index}');",
      "    }",
      "}"
    ],
    "description": "Inertia controller with CRUD"
  },
  "Inertia Share": {
    "prefix": "inertia-share",
    "body": [
      "Inertia::share([",
      "    '${1:key}' => fn () => ${2:\\$value},",
      "]);"
    ],
    "description": "Share data globally"
  },
  "Inertia Middleware": {
    "prefix": "inertia-middleware",
    "body": [
      "<?php",
      "",
      "namespace App\\Http\\Middleware;",
      "",
      "use Illuminate\\Http\\Request;",
      "use Inertia\\Middleware;",
      "",
      "class HandleInertiaRequests extends Middleware",
      "{",
      "    protected \\$rootView = 'app';",
      "",
      "    public function share(Request \\$request): array",
      "    {",
      "        return array_merge(parent::share(\\$request), [",
      "            'auth' => [",
      "                'user' => \\$request->user(),",
      "            ],",
      "            'flash' => [",
      "                'message' => fn () => \\$request->session()->get('message'),",
      "            ],",
      "        ]);",
      "    }",
      "}"
    ],
    "description": "Inertia middleware"
  },
