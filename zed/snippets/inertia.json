  "Inertia Vue Form": {
    "prefix": "inertia-vue-form",
    "body": [
      "<script setup>",
      "import { useForm } from '@inertiajs/vue3'",
      "",
      "const form = useForm({",
      "    ${1:field}: '',",
      "})",
      "",
      "const submit = () => {",
      "    form.${2:post}(route('${3:route.store}'))",
      "}",
      "</script>",
      "",
      "<template>",
      "    <form @submit.prevent=\"submit\">",
      "        <input v-model=\"form.${1:field}\" type=\"text\" />",
      "        <div v-if=\"form.errors.${1:field}\">{{ form.errors.${1:field} }}</div>",
      "",
      "        <button type=\"submit\" :disabled=\"form.processing\">",
      "            Submit",
      "        </button>",
      "    </form>",
      "</template>"
    ],
    "description": "Inertia Vue form with useForm"
  },
  "Inertia useForm": {
    "prefix": "inertia-useform",
    "body": [
      "const form = useForm({",
      "    ${1:field}: ${2:''},",
      "})"
